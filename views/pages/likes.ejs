<!doctype html>
<html lang="en">

<%- include('../components/head'); %>

    <body>
        <%- include('../components/header'); %>
            <main>
                <h1>Your liked Doggo's</h1>
                <% likes.forEach( matches=> { %>
                    <% if (matches.like==true){ %>

                        <section class="dog-profile">
                            <div class="dog-profile__img-container">
                                <img src="/img/<%= matches.image %>" alt="doggo">
                            </div>
                            <div class="dog-profile__content">
                                <h2>
                                    <%= matches.name %>
                                </h2>
                                <div>
                                    <p>
                                        <%= matches.about %>
                                    </p>
                                    <ul>
                                        <li>
                                            <span>Age:</span>
                                            <%= matches.age %> years
                                        </li>
                                        <li>
                                            <span>Gender:</span>
                                            <%= matches.gender %>
                                        </li>
                                        <li>
                                            <span>Size:</span>
                                            <%= matches.size %>
                                        </li>
                                    </ul>
                                    <form action="/removedoggo" method="post">
                                        <button name="remove" type="submit" value="<%= matches._id %>"
                                            class="btn-like">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </section>
                        <% } %>
                            <% }) %>
            </main>
            <%- include('../components/footer'); %>
                <script src="scripts/menu.js"></script>
    </body>

</html>